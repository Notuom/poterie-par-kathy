---
import "@fontsource/kalam";
import { Icon } from "astro-icon";
---

<div class="hero">
  <div class="background"></div>
  <div class="foreground">
    <img class="logo" src={`${import.meta.env.BASE_URL}/logo.png`} alt="Poterie par Kathy" />
    <h1>Poterie fabriquée à la main à Montréal</h1>
    <div class="social">
      <a title="Page Facebook" href="https://www.instagram.com/poterie.par.kathy/">
        <Icon pack="mdi" name="instagram" />
      </a>
      <a title="Page Instagram" href="https://www.facebook.com/poterie.par.kathy/">
        <Icon pack="mdi" name="facebook" />
      </a>
      <a title="Message direct sur Instagram" href="https://www.instagram.com/m/poterie.par.kathy/">
        <Icon pack="mdi" name="facebook-messenger" />
      </a>
    </div>
  </div>
</div>
<style>
  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  .background {
    position: absolute;
    width: 100%;
    height: 100%;
    flex-grow: 1;
  }
  .background {
    background-image: url("/banner.jpg");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    filter: saturate(40%) brightness(175%) contrast(40%) blur(3px);
  }
  .foreground {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    padding: 1rem;
  }
  .logo {
    width: 15rem;
    max-width: 75%;
    display: block;
    margin: 0 auto;
    filter: drop-shadow(0 0 10px white);
  }
  h1 {
    font-family: "Kalam", cursive;
    text-align: center;
    color: whitesmoke;
    text-shadow: 2px 2px 10px black;
  }
  .social a:link,
  .social a:visited {
    text-decoration: none;
    color: var(--tertiary);
  }
  .social a:hover,
  .social a:active,
  social a:focus {
    text-decoration: none;
    filter: brightness(50%);
  }
  .social a {
    display: inline-block;
    margin: 0 1rem;
  }
  .social a [astro-icon] {
    width: 4rem;
    height: 4rem;
  }
</style>
